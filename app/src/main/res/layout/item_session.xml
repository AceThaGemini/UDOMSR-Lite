<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="104dp"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="4dp"

    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ripple_accent_color"
        android:padding="16dp">

        <TextView
            android:id="@+id/textCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text="CS413 - Artificial Intelligence"
            android:textColor="?attr/colorPrimary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textVenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="LRB 105"
            android:textColor="@color/color_secondary_text"
            android:textSize="14sp" />


        <ImageView
            android:id="@+id/iconPerson"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_person"
            android:tint="@color/color_secondary_text" />

        <TextView
            android:id="@+id/textInstructor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/iconPerson"
            android:text="Mr Apina, Fredrick"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="2dp"
            android:text="14:00"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iconTime"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/textTime"
            android:src="@drawable/ic_clock"
            android:tint="@color/color_secondary_text" />


    </RelativeLayout>

</android.support.v7.widget.CardView>